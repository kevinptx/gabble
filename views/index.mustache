<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Gabble</title>
  </head>

  <body>
    <div class="">
      <a href="/">Gabble</a>
      <a href="/newGab">Create a New Gab</a>
      {{#user}}
      <a href="#">Logged in as{{username}}</a>
      {{/user}}
      <a href="/logout">Log Out</a>
    </div>

    <h2>{{testmessage}}</h2>
    <h1>GABBLE</h1>

    <div class="posts">
      {{#posts}}
      <div class="postsDiv">

        <div class="title">
          {{title}}
        </div>

          <div class="body">
            {{body}}
          </div>

          <div class="">
            <h3>Liked By:</h3>
            {{#likes}}
            {{userId}}
            {{/likes}}
          </div>

          <div class="editGab">
            <a href="/like/{{id}}">Like</a>
            <a href="/delete/{{id}}">Delete Gab</a>
          </div>

      </div>
      {{/posts}}
    </div>
  </body>
</html>
